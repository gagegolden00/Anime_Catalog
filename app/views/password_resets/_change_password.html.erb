<%= form_with(url: password_resets_path(params[:id]), method: :patch) do |form| %>
  <%= form.hidden_field :user_id %>
  <br><br><br>
  <%= form.label :old_password, "Old Password" %>
  <%= form.password_field :old_password, id: "old_password", required: true %>
  <br><br><br>
  <%= form.label :new_password, "New Password" %>
  <%= form.password_field :new_password, id: "new_password", required: true %>
  <br><br><br>
  <%= form.label :confirm_new_password, "Confirm New Password" %>
  <%= form.password_field :confirm_new_password, id: "confirm_new_password", required: true %>
  <br><br><br>
  <%= form.submit "Change Password" %>
<% end %>

