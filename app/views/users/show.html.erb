<h1>User Home Page</h1>
<div>
  <h2>Favorites</h2>
  <% @user.favorites.each do |favorite| %>
    <ul>
      <li><%= link_to "#{favorite.anime.title}", anime_path(favorite.anime), class: 'hover-link'%></li>
      <br>
      <%= button_to "Remove from favorites", favorite_url(favorite), method: :delete,
                    data: {turbo_confirm: "Are you sure you want to delete #{favorite}?"} %>
      <br> <br>

    </ul>
  <% end %>

</div>