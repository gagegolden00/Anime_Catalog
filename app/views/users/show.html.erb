<h1>User Home Page</h1>


<div>
  <h2>Favorites</h2>
  <% @user.favorites.each do |favorite| %>
    <ul>
      <li><%= favorite.anime.title %></li>
      <%= button_to "Destroy", favorite_url(favorite), method: :delete,
                    data: {turbo_confirm: "Are You Sure you want to delete #{favorite}?"} %>
    </ul>
  <% end %>

</div>